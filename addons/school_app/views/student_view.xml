<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="school_student_view_form" model="ir.ui.view">
        <field name="name">school.student.view.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="school_student_view">
                <sheet>
                    <group string="Student Info">
                        <group>
                            <field name="name"/>
                            <field name="class_name"/>
                            <field name="admission_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="school_student_view_list" model="ir.ui.view">
        <field name="name">school.student.view.list</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree string="school_student_view">
                <field name="name"/>
                <field name="class_name"/>
                <field name="admission_date"/>
            </tree>
        </field>
    </record>

    <record id="school_student_view_action" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="school_student_view_portal_action" model="ir.actions.act_url">
        <field name="name">Student Portal</field>
        <field name="type">ir.actions.act_url</field>
        <field name="url">/students</field>
        <field name="target">new</field>
    </record>

    <menuitem id="school_student_view_menu" name="Student Info" sequence="0"/>
    <menuitem id="school_student_view_submenu" name="Student" action="school_student_view_action"
              parent="school_student_view_menu" sequence="0"/>
    <menuitem id="school_student_view_portal_menu" name="Student portal" action="school_student_view_portal_action"
              parent="school_student_view_menu" sequence="0"/>
</odoo>